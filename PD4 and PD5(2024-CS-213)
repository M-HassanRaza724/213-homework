#include<iostream>

using namespace std;



void IsEqual(int n1,int n2)

{

    if(n1 == n2)

    {

        cout<<"True";

    }

    if(n1 != n2)

    {

        cout<<"False";

    }

}



main()

{

    system("cls");



    int no1, no2;

    cout<<"Enter the first number: ";

    cin>>no1;

    cout<<"Enter the second number: ";

    cin>>no2;



    IsEqual(no1, no2);

}

//task2cp
#include<iostream>

using namespace std;



void Reverse(string boolean)

{

    if(boolean == "true")

    {

        cout<<"false";

    }

    if(boolean == "false")

    {

        cout<<"true";

    }

}



main()

{

    system("cls");



    string boolean;

    cout<<"Enter 'true' or 'false': ";

    cin>>boolean;



    Reverse(boolean);

}
//task3cp
#include<iostream>

using namespace std;



void priceCalculator(string name, int price)

{

    if (name == "Pakistan")

    {

        cout<<"Final ticket price after discount: $"<<price - (price/20);

    }

    if (name == "Ireland")

    {

        cout<<"Final ticket price after discount: $"<<price - (price/10);

    }

    if (name == "India")

    {

        cout<<"Final ticket price after discount: $"<<price - (price/5);

    }

    if (name == "England")

    {

        cout<<"Final ticket price after discount: $"<<price - (price/100)*30;

    }

    if (name == "Canada")

    {

        cout<<"Final ticket price after discount: $"<<price - (price/100)*45;

    }

}



main()

{

    system("cls");



    string name;

    int price;

    

    cout<<"Enter country,s name: ";

    cin>>name;

    cout<<"Enter the ticket price in dollars: $";

    cin>>price;



    priceCalculator(name, price);

}
