#include<iostream>

using namespace std;



void longestTime(int h, int m)

{

    int h_in_m = h*60;

    

    if(h_in_m > m)

    {

        cout<<h<<" hours.";

    }

    if(h_in_m < m)

    {

        cout<<m<<" minutes.";

    }

    if(h_in_m == m)

    {

        cout<<h<<" hours and "<<m<<" minutes both have equal time duration.";

    }

}



